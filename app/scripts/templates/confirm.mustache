<div id="main-content" class="card">
  <header>
    {{#isSignUp}}
    <h1 id="fxa-confirm-header">{{#t}}Confirm your account{{/t}}</h1>
    {{/isSignUp}}
    {{#isSignIn}}
    <h1 id="fxa-confirm-signin-header">{{#t}}Confirm this sign-in{{/t}}</h1>
    {{/isSignIn}}
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <div class="graphic graphic-mail"></div>

    {{#isSignUp}}
    <p class="verification-email-message">{{#unsafeTranslate}}Check your email for the verification link sent&nbsp;to %(escapedEmail)s{{/unsafeTranslate}}</p>
    {{/isSignUp}}
    {{#isSignIn}}
      {{#isEmail}}
        <p class="verification-email-message">{{#t}}Check your email for the sign-in confirmation link sent to %(email)s{{/t}}</p>
      {{/isEmail}}
      {{#isPush}}
        <p class="verification-email-message">{{#t}}To better protect your Firefox data, we've sent  a tab with a confirmation link to Firefox on your other devices{{/t}}</p>
      {{/isPush}}
    {{/isSignIn}}

    {{#isOpenWebmailButtonVisible}}
      <div class="button-row">
        <a href="{{{ escapedWebmailLink }}}" data-webmail-type="{{webmailType}}" class="button" target="_blank" id="open-webmail" type="button">{{webmailButtonText}}</a>
      </div>
    {{/isOpenWebmailButtonVisible}}

    <div class="links">
      {{^canGoBack}}
        {{#isEmail}}
          <a id="resend" class="delayed-fadein" href="#">{{#t}}Not in inbox or spam folder? Resend{{/t}}</a>
        {{/isEmail}}
        {{#isPush}}
          <a id="resend" class="delayed-fadein" href="#">{{#t}}Tab not arriving? Confirm by email instead.{{/t}}</a>
        {{/isPush}}
      {{/canGoBack}}
      {{#canGoBack}}
        {{#isEmail}}
          <a id="resend" class="left delayed-fadein" href="#">{{#t}}Not in inbox or spam folder? Resend{{/t}}</a>
        {{/isEmail}}
        {{#isPush}}
          <a id="resend" class="left delayed-fadein" href="#">{{#t}}Tab not arriving? Confirm by email instead{{/t}}</a>
        {{/isPush}}
        <a id="back" class="right delayed-fadein" href="#">{{#t}}Back{{/t}}</a>
      {{/canGoBack}}
    </div>
  </section>
</div>
